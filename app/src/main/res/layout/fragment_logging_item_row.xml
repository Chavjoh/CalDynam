<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_logging_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:contentDescription="Image"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_weight="100">

        <TextView
            android:id="@+id/tv_logging_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Name"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_logging_item_calorie_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:paddingBottom="6dp"
                android:contentDescription="Calories icon"
                android:src="@drawable/ic_apple_48dp" />

            <TextView
                android:id="@+id/tv_logging_item_calories"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Calories"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_logging_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="x"
        android:background="#00000000"
        android:layout_weight="99" />
</LinearLayout>